---
- hosts: RH8_3
  tasks:
    - name: Remover GIT
      yum: 
        name: git
        state: absent
        autoremove: true
      notify:
        - "GIT Removido"

 #   - name: instalar java
 #     yum: name=java state=latest
    
    - name: Extract tar.gz
      ansible.builtin.unarchive:
        src: git-2.30.0.tar.gz
        dest: /tmp

    - name: Install the 'Development tools' package group
      yum:
        name: "@Development tools"
        state: present
    
    - name: Install paquetitos
      yum:   
        name:
          - gettext-devel
          - openssl-devel
          - perl-CPAN
          - perl-devel
          - zlib-devel   
          - curl-devel

  handlers:       
    - name : GIT Removido
      shell: uname -r
#      service: name=httpd state=stopped
